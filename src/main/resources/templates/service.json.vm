{
  "kind": "Service",
  "apiVersion": "v1",
  "metadata": {
    "name": "${adc.name}",
    "annotations": {
      #if(${adc.webseal})
        "sprocket.sits.no/service.webseal": "${adc.webseal.route}",
        "sprocket.sits.no/service.webseal-roles": "${adc.webseal.roles}",
      #end
      #if(${adc.prometheus})
        "prometheus.io/scheme": "http",
        "prometheus.io/scrape": "true",
        "prometheus.io/path": "${adc.prometheus.path}",
        "prometheus.io/port": "$adc.prometheus.port"
      #else
        "prometheus.io/scrape": "false"
      #end
    },
    "labels": {
      "app": "${adc.name}",
      "updatedBy": "${username}",
      "affiliation": "${adc.affiliation}"
    }
  },
  "spec": {
    "ports": [
      {
        "name": "http",
        "protocol": "TCP",
        "port": 80,
        "targetPort": 8080,
        "nodePort": 0
      }
    ],
    "selector": {
      "name": "${adc.name}"
    },
    "type": "ClusterIP",
    "sessionAffinity": "None"
  }
}
