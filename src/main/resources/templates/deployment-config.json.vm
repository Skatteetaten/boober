{
  "kind": "DeploymentConfig",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      #if(${adc.releaseTo} && "$!{adc.releaseTo}" != "")
        "boober.skatteetaten.no/releaseTo": "${adc.releaseTo}",
      #end
      "boober.skatteetaten.no/applicationFile": "${adc.applicationFile}",
      #if("$!{overrides}" != "{}")
        "boober.skatteetaten.no/overrides": "${overrides}",
      #end
      #if(${adc.managementPath} && "$!{adc.managementPath}" != "")
        "console.skatteetaten.no/management-path": "${adc.managementPath}",
      #end
      "console.skatteetaten.no/alarm": "${adc.flags.alarm}"
      #if(${adc.certificateCn})
      ,
        "sprocket.sits.no/deployment-config.certificate": "${adc.certificateCn}"
      #end
      #if("${database}" != "")
      ,
        "sprocket.sits.no/deployment-config.database": "${database}"
      #end
    },
    "labels": {
      "app": "${adc.name}",
      "updatedBy": "${username}",
      "affiliation": "${adc.affiliation}",
      "booberDeployId": "${deployId}"
    },
    "name": "${adc.name}"
  },
  "spec": {
    #if(${adc.flags.rolling})
      "strategy": {
        "type": "Rolling",
        "rollingParams": {
          "intervalSeconds": 1,
          "maxSurge": "25%",
          "maxUnavailable": 0,
          "timeoutSeconds": 120,
          "updatePeriodSeconds": 1
        }
      },
    #else
      "strategy": {
        "type": "Recreate",
        "resources": {}
      },
    #end
    "triggers": [
      {
        "type": "ImageChange",
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "${adc.name}"
          ],
          "from": {
            #if(${adc.type} == "development")
              "name": "${adc.name}:latest",
            #else
              "name": "${adc.name}:default",
            #end
            "kind": "ImageStreamTag"
          }
        }
      }
    ],
    "replicas": ${adc.replicas},
    "selector": {
      "name": "${adc.name}"
    },
    "template": {
      "metadata": {
        "labels": {
          #if ("$!{adc.releaseTo}" != "")
            "deployTag": "${adc.releaseTo}",
          #else
            "deployTag": "${adc.version}",
          #end
          "name": "${adc.name}",
          "app": "${adc.name}",
          "updatedBy": "${username}",
          "affiliation": "${adc.affiliation}",
          "booberDeployId": "${deployId}"
        }
      },
      "spec": {
        "volumes": [
          #if (${adc.database})
            #foreach ($db  in $adc.database)
              {
                "name": "$db.dbName",
                "secret": {
                  "secretName": "$db.dbName"
                }
              },
            #end
          #end
          #if (${adc.mounts})
            #foreach ($mount in $adc.mounts)
              {
                "name": "${mount.volumeName}",
                #if(${mount.type} == "ConfigMap")
                  "configMap": {
                    "name": "${mount.mountName}"
                  }
                #elseif(${mount.type} == "Secret")
                  "secret": {
                    "secretName": "${mount.mountName}"
                  }
                #end
              },
            #end
          #end
          {
            "name": "application-log-volume",
            "emptyDir": {}
          }
          #if(${adc.config.size()} != 0)
          ,
            {
              "name": "config",
              "configMap": {
                "name": "${adc.name}"
              }
            }
          #end
          #if(${adc.secrets})
          ,
            {
              "name": "secrets",
              "secret": {
                "secretName": "${adc.name}"
              }
            }
          #end

          #if(${adc.certificateCn})
          ,
            {
              "name": "${adc.name}-cert",
              "secret": {
                "secretName": "${adc.name}-cert"
              }
            }
          #end
        ],
        "containers": [
          {
            "name": "${adc.name}",
            "ports": [
              {
                "containerPort": 8080,
                "protocol": "TCP",
                "name": "http"
              },
              {
                "containerPort": 8081,
                "protocol": "TCP",
                "name": "management"
              },
              {
                "containerPort": 8778,
                "name": "jolokia"
              }
            ],
            "env": [
              {
                "name": "SPLUNK_INDEX",
                "value": "${adc.splunkIndex}"
              },
              {
                "name": "POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "HTTP_PORT",
                "value": "8080"
              },
              {
                "name": "MANAGEMENT_HTTP_PORT",
                "value": "8081"
              },
              {
                "name": "APP_NAME",
                "value": "${adc.name}"
              }
              #if(${adc.certificateCn})
              ,
                {
                  "name": "STS_CERTIFICATE_URL",
                  "value": "${certPath}/certificate.crt"
                },
                {
                  "name": "STS_PRIVATE_KEY_URL",
                  "value": "${certPath}/privatekey.key"
                },
                {
                  "name": "STS_KEYSTORE_DESCRIPTOR",
                  "value": "${certPath}/descriptor.properties"
                }
              #end
              #if (${adc.flags.debug})
              ,
                {
                  "name": "REMOTE_DEBUG",
                  "value": "true"
                },
                {
                  "name": "DEBUG_PORT",
                  "value": "5005"
                }
              #end

              #if (${adc.route.size()} !=0)
                  ,{
                    "name": "ROUTE_NAME",
                    "value": "${adc.routeName}"
                  }
                #end

              #if (${adc.database})
                #foreach ($db  in $adc.database)
                  #if($velocityCount == 1)
                  ,
                    {
                      "name": "DB",
                      "value": "${dbPath}/${db.dbName}/info"
                    },
                    {
                      "name": "DB_PROPERTIES",
                      "value": "${dbPath}/${db.dbName}/db.properties"
                    }
                  #end
                  ,
                  {
                    "name": "${db.envName}",
                    "value": "${dbPath}/${db.dbName}/info"
                  },
                  {
                    "name": "${db.envName}_PROPERTIES",
                    "value": "${dbPath}/${db.dbName}/db.properties"
                  }
                #end
              #end

              #if (${adc.mounts})

                #foreach ($mount in $adc.mounts)
                ,
                  {
                    "name": "VOLUME_${mount.mountName.toUpperCase().replace("-", "_")}",
                    "value": "${mount.path}"
                  }
                #end
              #end


            ],
            "resources": {
              "limits": {
                "cpu": "${adc.resources.cpu.max}",
                "memory": "${adc.resources.memory.max}"
              },
              "requests": {
                "cpu": "${adc.resources.cpu.min}",
                "memory": "${adc.resources.memory.min}"
              }
            },
            "volumeMounts": [
              #if (${adc.database})
                #foreach ($db  in $adc.database)
                  {
                    "name": "$db.dbName",
                    "mountPath": "$dbPath/$db.dbName"
                  },
                #end
              #end
               #if (${adc.mounts})
                #foreach ($mount in $adc.mounts)
                  {
                    "name": "${mount.mountName}",
                    "mountPath": "${mount.path}"
                  },
                #end
              #end
              {
                "name": "application-log-volume",
                "mountPath": "/u01/logs"
              }
              #if(${adc.config.size()} != 0)
              ,
                {
                  "name": "config",
                  "mountPath": "/u01/config/configmap"
                }
              #end
              #if(${adc.certificateCn})
              ,
                {
                  "name": "${adc.name}-cert",
                  "mountPath": "$certPath"
                }
              #end
              #if(${adc.secrets})
              ,
                {
                  "name": "secrets",
                  "mountPath": "/u01/config/secret"
                }
              #end
            ],
            "terminationMessagePath": "/dev/termination-log",
            "imagePullPolicy": "IfNotPresent",
            "capabilities": {},
            "securityContext": {
              "capabilities": {},
              "privileged": false
            },
            "livenessProbe": {
              "exec": {
                "command": [
                  "/u01/application/bin/liveness.sh"
                ]
              },
              "initialDelaySeconds": 10,
              "timeoutSeconds": 1
            },
            "readinessProbe": {
              "exec": {
                "command": [
                  "/u01/application/bin/readiness.sh"
                ]
              },
              "initialDelaySeconds": 10,
              "timeoutSeconds": 1
            }
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst"
        #if(${adc.serviceAccount})
        ,
          "serviceAccountName": "${adc.serviceAccount}"
        #end
      }
    }
  }
}
