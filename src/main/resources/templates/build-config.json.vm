{
  "kind": "BuildConfig",
  "apiVersion": "v1",
  "metadata": {
    "name": "${aac.name}",
    "labels": {
      "app": "${aac.name}",
      "updatedBy": "${username}",
      "affiliation": "${aac.affiliation}",
      "booberDeployId": "${deployId}"
    }
  },
  "spec": {
    "triggers": [
      {
        "type": "ImageChange",
        "imageChange": {
          "from": {
            "kind": "ImageStreamTag",
            "namespace": "openshift",
            "name": "${aac.build.baseName}:${aac.build.baseVersion}"
          }
        }
      },
      {
        "type": "ImageChange",
        "imageChange": {}
      }
    ],
    "strategy": {
      "type": "Custom",
      "customStrategy": {
        "from": {
          "kind": "ImageStreamTag",
          "namespace": "openshift",
          "name": "${aac.build.builderName}:${aac.build.builderVersion}"
        },
        "env": [
          {
            "name": "ARTIFACT_ID",
            "value": "${aac.deploy.artifactId}"
          },
          {
            "name": "GROUP_ID",
            "value": "${aac.deploy.groupId}"
          },
          {
            "name": "VERSION",
            "value": "${aac.deploy.version}"
          },
          {
            "name": "DOCKER_BASE_VERSION",
            "value": "${aac.build.baseVersion}"
          },
          {
            "name": "DOCKER_BASE_IMAGE",
            "value": "aurora/${aac.build.baseName}"
          },
          {
            "name": "PUSH_EXTRA_TAGS",
            "value": "${aac.build.extraTags}"
          }
        ],
        "exposeDockerSocket": true
      }
    },
    "output": {
      "to": {
        "kind": "ImageStreamTag",
        "name": "${aac.name}:latest"
      }
    }
  }
}