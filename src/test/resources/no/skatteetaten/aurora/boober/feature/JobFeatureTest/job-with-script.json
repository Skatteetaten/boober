{
  "apiVersion" : "batch/v1beta1",
  "kind" : "CronJob",
  "metadata" : {
    "name" : "simple",
    "namespace" : "paas-utv"
  },
  "spec" : {
    "concurrencyPolicy" : "Forbid",
    "failedJobsHistoryLimit" : 1,
    "jobTemplate" : {
      "metadata" : {
        "generateName" : "simple"
      },
      "spec" : {
        "completions" : 1,
        "parallelism" : 1,
        "template" : {
          "metadata" : {
            "generateName" : "simple"
          },
          "spec" : {
            "containers" : [ {
              "command" : [ "/bin/sh", "/u01/config/script/script.sh" ],
              "image" : "docker.registry/foo_bar/simple:1",
              "imagePullPolicy" : "Always",
              "name" : "simple",
              "volumeMounts" : [ {
                "mountPath" : "/u01/config/script",
                "name" : "simple-script"
              } ]
            } ],
            "dnsPolicy" : "ClusterFirst",
            "restartPolicy" : "Never",
            "volumes" : [ {
              "configMap" : {
                "name" : "simple-script"
              },
              "name" : "simple-script"
            } ]
          }
        }
      }
    },
    "schedule" : "0/5 * * * *",
    "startingDeadlineSeconds" : 60,
    "successfulJobsHistoryLimit" : 3,
    "suspend" : false
  }
}