{
  "apiVersion": "apps.openshift.io/v1",
  "kind": "DeploymentConfig",
  "metadata": {
    "name": "simple",
    "namespace": "paas-utv"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "simple"
    },
    "strategy": {
      "rollingParams": {
        "intervalSeconds": 1,
        "maxSurge": "25%",
        "maxUnavailable": 0,
        "timeoutSeconds": 180,
        "updatePeriodSeconds": 1
      },
      "type": "Rolling"
    },
    "template": {
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "DATABASE_CONFIG_0_foo",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "foo",
                    "name": "simple-ski-postgres-credentials",
                    "optional": false
                  }
                }
              },
              {
                "name": "DATABASE_CONFIG_0_bar",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "bar",
                    "name": "simple-ski-postgres-credentials",
                    "optional": false
                  }
                }
              },
              {
                "name": "DATABASE_CONFIG_1_foo",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "foo",
                    "name": "simple-fus-oracle-credentials",
                    "optional": false
                  }
                }
              },
              {
                "name": "DATABASE_CONFIG_1_bar",
                "valueFrom": {
                  "secretKeyRef": {
                    "key": "bar",
                    "name": "simple-fus-oracle-credentials",
                    "optional": false
                  }
                }
              }
            ],
            "name": "simple"
          }
        ],
        "dnsPolicy": "ClusterFirst",
        "restartPolicy": "Always"
      }
    },
    "triggers": [
      {
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "simple"
          ],
          "from": {
            "kind": "ImageStreamTag",
            "name": "simple:default"
          }
        },
        "type": "ImageChange"
      }
    ]
  }
}