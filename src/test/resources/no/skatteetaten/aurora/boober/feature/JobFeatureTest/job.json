{
  "apiVersion" : "batch/v1",
  "kind" : "Job",
  "metadata" : {
    "generateName" : "simple",
    "namespace" : "paas-utv"
  },
  "spec" : {
    "completions" : 1,
    "parallelism" : 1,
    "template" : {
      "metadata" : {
        "generateName" : "simple"
      },
      "spec" : {
        "containers" : [ {
          "args" : [ "-vvv", "http://foo" ],
          "command" : [ "curl" ],
          "image" : "docker.registry/foo_bar/simple:1",
          "imagePullPolicy" : "Always",
          "name" : "simple"
        } ],
        "dnsPolicy" : "ClusterFirst",
        "restartPolicy" : "Never"
      }
    }
  }
}