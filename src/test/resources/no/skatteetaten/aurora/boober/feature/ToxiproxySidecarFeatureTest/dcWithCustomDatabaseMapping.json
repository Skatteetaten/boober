{
  "apiVersion": "apps.openshift.io/v1",
  "kind": "DeploymentConfig",
  "metadata": {
    "name": "simple",
    "namespace": "paas-utv"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "simple"
    },
    "strategy": {
      "rollingParams": {
        "intervalSeconds": 1,
        "maxSurge": "25%",
        "maxUnavailable": 0,
        "timeoutSeconds": 180,
        "updatePeriodSeconds": 1
      },
      "type": "Rolling"
    },
    "template": {
      "spec": {
        "containers": [
          {
            "args": [
              "-config",
              "/u01/config/toxiproxy/config.json",
              "-host=0.0.0.0"
            ],
            "env": [
              {
                "name": "HTTP_PORT",
                "value": "8090"
              },
              {
                "name": "MANAGEMENT_HTTP_PORT",
                "value": "8474"
              }
            ],
            "image": "docker.registry/shopify/toxiproxy@sha:1234",
            "name": "simple-toxiproxy-sidecar",
            "ports": [
              {
                "containerPort": 8090,
                "name": "http",
                "protocol": "TCP"
              },
              {
                "containerPort": 8474,
                "name": "management",
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "initialDelaySeconds": 10,
              "tcpSocket": {
                "port": 8474
              },
              "timeoutSeconds": 1
            },
            "resources": {
              "limits": {
                "memory": "256Mi",
                "cpu": "1"
              },
              "requests": {
                "memory": "128Mi",
                "cpu": "10m"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/u01/config/toxiproxy",
                "name": "simple-toxiproxy-config"
              }
            ]
          },
          {
            "env":[
              {
                "name": "CUSTOMDBNAME_DB",
                "value": "/u01/secrets/app/customdbname-db/info"
              },
              {
                "name": "CUSTOMDBNAME_DB_PROPERTIES",
                "value": "/u01/secrets/app/customdbname-db/db.properties"
              },
              {
                "name": "DB",
                "value": "/u01/secrets/app/customdbname-db/info"
              },
              {
                "name": "DB_PROPERTIES",
                "value": "/u01/secrets/app/customdbname-db/db.properties"
              }
            ],
            "name": "simple",
            "volumeMounts":[
              {
                "mountPath": "/u01/secrets/app/customdbname-db",
                "name": "simple-customdbname-db"
              }
            ]
          }
        ],
        "dnsPolicy": "ClusterFirst",
        "restartPolicy": "Always",
        "volumes": [
          {
            "configMap": {
              "name": "simple-toxiproxy-config"
            },
            "name": "simple-toxiproxy-config"
          },
          {
            "name":"simple-customdbname-db",
            "secret": {
              "secretName": "simple-customdbname-db"
            }
          }
        ]
      }
    },
    "triggers": [
      {
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "simple"
          ],
          "from": {
            "kind": "ImageStreamTag",
            "name": "simple:default"
          }
        },
        "type": "ImageChange"
      }
    ]
  }
}