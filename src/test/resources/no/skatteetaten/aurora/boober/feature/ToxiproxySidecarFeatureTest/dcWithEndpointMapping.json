{
  "apiVersion": "apps.openshift.io/v1",
  "kind": "DeploymentConfig",
  "metadata": {
    "name": "simple",
    "namespace": "paas-utv"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "simple"
    },
    "strategy": {
      "rollingParams": {
        "intervalSeconds": 1,
        "maxSurge": "25%",
        "maxUnavailable": 0,
        "timeoutSeconds": 180,
        "updatePeriodSeconds": 1
      },
      "type": "Rolling"
    },
    "template": {
      "spec": {
        "containers": [
          {
            "args": [
              "-config",
              "/u01/config/toxiproxy/config.json",
              "-host=0.0.0.0"
            ],
            "env": [
              {
                "name": "HTTP_PORT",
                "value": "8090"
              },
              {
                "name": "MANAGEMENT_HTTP_PORT",
                "value": "8474"
              }
            ],
            "image": "docker.registry/shopify/toxiproxy@sha:1234",
            "lifecycle": {
              "postStart": {
                "exec": {
                  "command": [
                    "sh",
                    "-c",
                    "i=0; s=1; while [ $i -ne 10 -a $s -ne 0 ]; do i=$(($i+1)); sleep 1; nc -zv 127.0.0.1 8474 && exit; s=$?; done; exit 1;"
                  ]
                }
              }
            },
            "name": "simple-toxiproxy-sidecar",
            "ports": [
              {
                "containerPort": 8090,
                "name": "http",
                "protocol": "TCP"
              },
              {
                "containerPort": 8474,
                "name": "management",
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "initialDelaySeconds": 10,
              "tcpSocket": {
                "port": 8474
              },
              "timeoutSeconds": 1
            },
            "resources": {
              "limits": {
                "memory": "256Mi",
                "cpu": "1"
              },
              "requests": {
                "memory": "128Mi",
                "cpu": "10m"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/u01/config/toxiproxy",
                "name": "simple-toxiproxy-config"
              }
            ]
          },
          {
            "env": [
              {
                "name": "TEST_WITH_PROXYNAME",
                "value": "http://localhost:18000"
              },
              {
                "name": "TEST_WITHOUT_PROXYNAME",
                "value": "http://localhost:18001"
              },
              {
                "name": "DISABLED_TEST_WITH_PROXYNAME",
                "value": "http://test3.test"
              },
              {
                "name": "DISABLED_TEST_WITHOUT_PROXYNAME",
                "value": "http://test4.test"
              },
              {
                "name": "HTTPS_URL",
                "value": "https://localhost:18002"
              },
              {
                "name": "URL_WITH_PORT",
                "value": "http://localhost:18003"
              },
              {
                "name": "URL_WITH_PATH",
                "value": "http://localhost:18004/path"
              },
              {
                "name": "INITIALLY_ENABLED",
                "value": "http://localhost:18005"
              },
              {
                "name": "INITIALLY_DISABLED",
                "value": "http://localhost:18006"
              }
            ],
            "name": "simple"
          }
        ],
        "dnsPolicy": "ClusterFirst",
        "restartPolicy": "Always",
        "volumes": [
          {
            "configMap": {
              "name": "simple-toxiproxy-config"
            },
            "name": "simple-toxiproxy-config"
          }
        ]
      }
    },
    "triggers": [
      {
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "simple"
          ],
          "from": {
            "kind": "ImageStreamTag",
            "name": "simple:default"
          }
        },
        "type": "ImageChange"
      }
    ]
  }
}