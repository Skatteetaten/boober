{
  "apiVersion": "apps.openshift.io/v1",
  "kind": "DeploymentConfig",
  "metadata": {
    "annotations": {
      "boober.skatteetaten.no/applicationFile": "release/aos-simple.json",
      "console.skatteetaten.no/alarm": "true",
      "boober.skatteetaten.no/releaseTo": "ref",
      "sprocket.sits.no/deployment-config.certificate": "ske.aurora.openshift.aos-simple"
    },
    "labels": {
      "app": "aos-simple",
      "updatedBy": "hero",
      "affiliation": "aos",
      "booberDeployId": "123",
      "name": "aos-simple",
      "deployTag": "ref"
    },
    "name": "aos-simple"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "aos-simple"
    },
    "strategy": {
      "rollingParams": {
        "intervalSeconds": 1,
        "maxSurge": "25%",
        "maxUnavailable": 0,
        "timeoutSeconds": 180,
        "updatePeriodSeconds": 1
      },
      "type": "Rolling"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "aos-simple",
          "updatedBy": "hero",
          "affiliation": "aos",
          "booberDeployId": "123",
          "name": "aos-simple",
          "deployTag": "ref"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "OPENSHIFT_CLUSTER",
                "value": "utv"
              },
              {
                "name": "APP_NAME",
                "value": "aos-simple"
              },
              {
                "name": "SPLUNK_INDEX",
                "value": "openshift-test"
              },
              {
                "name": "ROUTE_NAME",
                "value": "aos-simple-aos-release.utv.paas.skead.no/foo"
              },
              {
                "name": "ROUTE_URL",
                "value": "http://aos-simple-aos-release.utv.paas.skead.no/foo"
              },
              {
                "name": "STS_CERTIFICATE_URL",
                "value": "/u01/secrets/app/aos-simple-cert/certificate.crt"
              },
              {
                "name": "STS_PRIVATE_KEY_URL",
                "value": "/u01/secrets/app/aos-simple-cert/privatekey.key"
              },
              {
                "name": "STS_KEYSTORE_DESCRIPTOR",
                "value": "/u01/secrets/app/aos-simple-cert/descriptor.properties"
              },
              {
                "name": "VOLUME_AOS_SIMPLE_CERT",
                "value": "/u01/secrets/app/aos-simple-cert"
              },
              {
                "name": "HTTP_PORT",
                "value": "8080"
              },
              {
                "name": "MANAGEMENT_HTTP_PORT",
                "value": "8081"
              },
              {
                "name": "JOLOKIA_HTTP_PORT",
                "value": "8778"
              }
            ],
            "imagePullPolicy": "IfNotPresent",
            "name": "aos-simple-java",
            "ports": [
              {
                "containerPort": 8080,
                "name": "http",
                "protocol": "TCP"
              },
              {
                "containerPort": 8081,
                "name": "management",
                "protocol": "TCP"
              },
              {
                "containerPort": 8778,
                "name": "jolokia",
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "initialDelaySeconds": 10,
              "tcpSocket": {
                "port": 8080
              },
              "timeoutSeconds": 1
            },
            "resources": {
              "limits": {
                "cpu": "2000m",
                "memory": "128Mi"
              },
              "requests": {
                "cpu": "100m",
                "memory": "128Mi"
              }
            },
            "securityContext": {
              "privileged": false
            },
            "terminationMessagePath": "/dev/termination-log",
            "volumeMounts": [
              {
                "mountPath": "/u01/logs",
                "name": "application-log-volume"
              },
              {
                "mountPath": "/u01/secrets/app/aos-simple-cert",
                "name": "aos-simple-cert"
              }
            ]
          }
        ],
        "dnsPolicy": "ClusterFirst",
        "restartPolicy": "Always",
        "volumes": [
          {
            "name": "aos-simple-cert",
            "secret": {
              "secretName": "aos-simple-cert"
            }
          },
          {
            "emptyDir": {
            },
            "name": "application-log-volume"
          }
        ]
      }
    },
    "triggers": [
      {
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "aos-simple-java"
          ],
          "from": {
            "kind": "ImageStreamTag",
            "name": "aos-simple:default"
          }
        },
        "type": "ImageChange"
      }
    ]
  }
}

