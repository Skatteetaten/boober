{
  "apiVersion": "apps/v1",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "operationScope": "aos-4016",
      "app": "whoami",
      "updatedBy": "hero",
      "updatedAt": "0",
      "lastUpdatedYear": "1970",
      "affiliation": "paas",
      "name": "whoami",
      "deployTag": "1",
      "booberDeployId": "deploy1"
    },
    "name": "whoami",
    "namespace": "paas-utv",
    "ownerReferences": [
      {
        "apiVersion": "skatteetaten.no/v1",
        "kind": "ApplicationDeployment",
        "name": "whoami",
        "uid": "123-123"
      }
    ]
  },
  "spec": {
    "progressDeadlineSeconds": 180,
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "name": "whoami"
      }
    },
    "strategy": {
      "rollingUpdate": {
        "maxSurge": "25%",
        "maxUnavailable": 0
      },
      "type": "RollingUpdate"
    },
    "template": {
      "metadata": {
        "annotations": {
          "boober.skatteetaten.no/deployTag": "1"
        },
        "labels": {
          "operationScope": "aos-4016",
          "app": "whoami",
          "updatedBy": "hero",
          "updatedAt": "0",
          "lastUpdatedYear": "1970",
          "affiliation": "paas",
          "name": "whoami",
          "deployTag": "1",
          "booberDeployId": "deploy1"
        }
      },
      "spec": {
        "containers": [
          {
            "args": [
              "-config",
              "/u01/config/toxiproxy/config.json",
              "-host=0.0.0.0"
            ],
            "env": [
              {
                "name": "HTTP_PORT",
                "value": "8090"
              },
              {
                "name": "MANAGEMENT_HTTP_PORT",
                "value": "8474"
              }
            ],
            "image": "docker.registry:5000/shopify/toxiproxy@sha256:1234",
            "lifecycle": {
              "postStart": {
                "exec": {
                  "command": [
                    "sh",
                    "-c",
                    "for i in $(seq 1 10); do sleep 1; nc -zv 127.0.0.1 8474 && exit; done; exit 1;"
                  ]
                }
              }
            },
            "name": "whoami-toxiproxy-sidecar",
            "ports": [
              {
                "containerPort": 8090,
                "name": "http",
                "protocol": "TCP"
              },
              {
                "containerPort": 8474,
                "name": "management",
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "initialDelaySeconds": 10,
              "tcpSocket": {
                "port": 8474
              },
              "timeoutSeconds": 1
            },
            "resources": {
              "limits": {
                "memory": "256Mi",
                "cpu": "1"
              },
              "requests": {
                "memory": "128Mi",
                "cpu": "10m"
              }
            },
            "volumeMounts": [
              {
                "mountPath": "/u01/config/toxiproxy",
                "name": "whoami-toxiproxy-config"
              }
            ]
          },
          {
            "env": [
              {
                "name": "POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "HTTP_PORT",
                "value": "8080"
              },
              {
                "name": "MANAGEMENT_HTTP_PORT",
                "value": "8081"
              },
              {
                "name": "JOLOKIA_HTTP_PORT",
                "value": "8778"
              },
              {
                "name": "EXTRA_HTTP_PORT",
                "value": "8082"
              },
              {
                "name": "APPLICATION_DEPLOYMENT_ID",
                "value": "1234567890"
              },
              {
                "name": "WHOAMI_DB",
                "value": "/u01/secrets/app/whoami-db/info"
              },
              {
                "name": "WHOAMI_DB_PROPERTIES",
                "value": "/u01/secrets/app/whoami-db/db.properties"
              },
              {
                "name": "DB",
                "value": "/u01/secrets/app/whoami-db/info"
              },
              {
                "name": "DB_PROPERTIES",
                "value": "/u01/secrets/app/whoami-db/db.properties"
              },
              {
                "name": "OPENSHIFT_CLUSTER",
                "value": "utv"
              },
              {
                "name": "APP_NAME",
                "value": "whoami"
              },
              {
                "name": "AURORA_HEADER_KLIENTID",
                "value": "aurora/whoami/${APP_VERSION}"
              }
            ],
            "image": "docker.registry:5000/org_test/whoami:1",
            "imagePullPolicy": "IfNotPresent",
            "name": "whoami-java",
            "ports": [
              {
                "containerPort": 8080,
                "name": "http",
                "protocol": "TCP"
              },
              {
                "containerPort": 8081,
                "name": "management",
                "protocol": "TCP"
              },
              {
                "containerPort": 8778,
                "name": "jolokia",
                "protocol": "TCP"
              },
              {
                "containerPort": 8082,
                "name": "extra",
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "initialDelaySeconds": 10,
              "tcpSocket": {
                "port": 8080
              },
              "timeoutSeconds": 1
            },
            "resources": {
              "limits": {
                "cpu": "2000m",
                "memory": "512Mi"
              },
              "requests": {
                "cpu": "10m",
                "memory": "128Mi"
              }
            },
            "securityContext": {
              "privileged": false
            },
            "terminationMessagePath": "/dev/termination-log",
            "volumeMounts": [
              {
                "mountPath": "/u01/logs",
                "name": "application-log-volume"
              },
              {
                "mountPath": "/u01/secrets/app/whoami-db",
                "name": "whoami-db"
              }
            ]
          }
        ],
        "dnsPolicy": "ClusterFirst",
        "restartPolicy": "Always",
        "volumes": [
          {
            "configMap": {
              "name": "whoami-toxiproxy-config"
            },
            "name": "whoami-toxiproxy-config"
          },
          {
            "emptyDir": { },
            "name": "application-log-volume"
          },
          {
            "name": "whoami-db",
            "secret": {
              "secretName": "whoami-db"
            }
          }
        ]
      }
    }
  }
}