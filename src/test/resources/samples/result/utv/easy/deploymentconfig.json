{
  "apiVersion": "apps.openshift.io/v1",
  "kind": "DeploymentConfig",
  "metadata": {
    "annotations": {
      "boober.skatteetaten.no/applicationFile": "utv/easy.json",
      "console.skatteetaten.no/alarm": "true",
      "console.skatteetaten.no/management-path": ":8081/actuator"
    },
    "labels": {
      "app": "easy",
      "updatedBy": "hero",
      "affiliation": "paas",
      "updateInBoober": "true",
      "name": "easy",
      "deployTag": "1"
    },
    "name": "easy",
    "namespace": "paas-utv",
    "ownerReferences": [
      {
        "apiVersion": "skatteetaten.no/v1",
        "kind": "ApplicationDeployment",
        "name": "easy",
        "uid": "123-123"
      }
    ]
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "easy"
    },
    "strategy": {
      "rollingParams": {
        "intervalSeconds": 1,
        "maxSurge": "25%",
        "maxUnavailable": 0,
        "timeoutSeconds": 180,
        "updatePeriodSeconds": 1
      },
      "type": "Rolling"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "easy",
          "updatedBy": "hero",
          "affiliation": "paas",
          "updateInBoober": "true",
          "name": "easy",
          "deployTag": "1"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "HTTP_PORT",
                "value": "8080"
              },
              {
                "name": "MANAGEMENT_HTTP_PORT",
                "value": "8081"
              },
              {
                "name": "JOLOKIA_HTTP_PORT",
                "value": "8778"
              },
              {
                "name": "OPENSHIFT_CLUSTER",
                "value": "utv"
              },
              {
                "name": "APP_NAME",
                "value": "easy"
              },
              {
                "name": "ROUTE_NAME",
                "value": "easy-paas-utv.test.paas"
              },
              {
                "name": "ROUTE_URL",
                "value": "http://easy-paas-utv.test.paas"
              },
              {
                "name": "EASY_DB",
                "value": "/u01/secrets/app/easy-db/info"
              },
              {
                "name": "EASY_DB_PROPERTIES",
                "value": "/u01/secrets/app/easy-db/db.properties"
              },
              {
                "name": "DB",
                "value": "/u01/secrets/app/easy-db/info"
              },
              {
                "name": "DB_PROPERTIES",
                "value": "/u01/secrets/app/easy-db/db.properties"
              },
              {
                "name": "STS_CERTIFICATE_URL",
                "value": "/u01/secrets/app/easy-cert/certificate.crt"
              },
              {
                "name": "STS_PRIVATE_KEY_URL",
                "value": "/u01/secrets/app/easy-cert/privatekey.key"
              },
              {
                "name": "STS_KEYSTORE_DESCRIPTOR",
                "value": "/u01/secrets/app/easy-cert/descriptor.properties"
              },
              {
                "name": "VOLUME_EASY_CERT",
                "value": "/u01/secrets/app/easy-cert"
              }
            ],
            "imagePullPolicy": "IfNotPresent",
            "name": "easy-java",
            "ports": [
              {
                "containerPort": 8080,
                "name": "http",
                "protocol": "TCP"
              },
              {
                "containerPort": 8081,
                "name": "management",
                "protocol": "TCP"
              },
              {
                "containerPort": 8778,
                "name": "jolokia",
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "initialDelaySeconds": 10,
              "tcpSocket": {
                "port": 8080
              },
              "timeoutSeconds": 1
            },
            "resources": {
              "limits": {
                "cpu": "2000m",
                "memory": "512Mi"
              },
              "requests": {
                "cpu": "10m",
                "memory": "128Mi"
              }
            },
            "securityContext": {
              "privileged": false
            },
            "terminationMessagePath": "/dev/termination-log",
            "volumeMounts": [
              {
                "mountPath": "/u01/logs",
                "name": "application-log-volume"
              },
              {
                "mountPath": "/u01/secrets/app/easy-db",
                "name": "easy-db"
              },
              {
                "mountPath": "/u01/secrets/app/easy-cert",
                "name": "easy-cert"
              }
            ]
          }
        ],
        "dnsPolicy": "ClusterFirst",
        "restartPolicy": "Always",
        "volumes": [
          {
            "emptyDir": {},
            "name": "application-log-volume"
          },
          {
            "name": "easy-db",
            "secret": {
              "secretName": "easy-db"
          }
          },
          {
            "name": "easy-cert",
            "secret": {
              "secretName": "easy-cert"
            }
          }
        ]
      }
    },
    "triggers": [
      {
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "easy-java"
          ],
          "from": {
            "kind": "ImageStreamTag",
            "name": "easy:default"
          }
        },
        "type": "ImageChange"
      }
    ]
  }
}