{
  "kind": "DeploymentConfig",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "boober.skatteetaten.no/applicationFile": "booberdev/sprocket.json",
      "console.skatteetaten.no/alarm": "true",
      "console.skatteetaten.no/management-path": ":8081/foobar"
    },
    "labels": {
      "app": "sprocket",
      "updatedBy": "hero",
      "affiliation": "aos",
      "booberDeployId": "123",
      "name": "sprocket",
      "deployTag": "3"
    },
    "name": "sprocket"
  },
  "spec": {
    "strategy": {
      "type": "Rolling",
      "rollingParams": {
        "intervalSeconds": 1,
        "maxSurge": "25%",
        "maxUnavailable": 0,
        "timeoutSeconds": 180,
        "updatePeriodSeconds": 1
      }
    },
    "triggers": [
      {
        "type": "ImageChange",
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "sprocket-java"
          ],
          "from": {
            "name": "sprocket:default",
            "kind": "ImageStreamTag"
          }
        }
      }
    ],
    "replicas": 1,
    "selector": {
      "name": "sprocket"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "sprocket",
          "updatedBy": "hero",
          "affiliation": "aos",
          "booberDeployId": "123",
          "name": "sprocket",
          "deployTag": "3"
        }
      },
      "spec": {
        "volumes": [
          {
            "name": "aurora-token",
            "secret": {
              "secretName": "aurora-token"
            }
          },
          {
            "name": "sprocket-config",
            "configMap": {
              "name": "sprocket-config"
            }
          },
          {
            "name": "application-log-volume",
            "emptyDir": {
            }
          }
        ],
        "containers": [
          {

            "env": [
              {
                "name": "POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "OPENSHIFT_CLUSTER",
                "value": "utv"
              },

              {
                "name": "APP_NAME",
                "value": "sprocket"
              },
              {
                "name": "SPLUNK_INDEX",
                "value": "openshift-test"
              },
              {
                "name": "REFERANSE_DB",
                "value": "/u01/secrets/app/referanse-db/info"
              },
              {
                "name": "REFERANSE_DB_PROPERTIES",
                "value": "/u01/secrets/app/referanse-db/db.properties"
              },
              {
                "name": "FOO_DB",
                "value": "/u01/secrets/app/foo-db/info"
              },
              {
                "name": "FOO_DB_PROPERTIES",
                "value": "/u01/secrets/app/foo-db/db.properties"
              },
              {
                "name": "DB",
                "value": "/u01/secrets/app/referanse-db/info"
              },
              {
                "name": "DB_PROPERTIES",
                "value": "/u01/secrets/app/referanse-db/db.properties"
              },
              {
                "name": "VOLUME_AURORA_TOKEN",
                "value": "/u01/secrets/app/aurora-token"
              },
              {
                "name": "VOLUME_SPROCKET_CONFIG",
                "value": "/u01/foo"
              },
              {
                "name": "HTTP_PORT",
                "value": "8080"
              },
              {
                "name": "MANAGEMENT_HTTP_PORT",
                "value": "8081"
              },
              {
                "name": "JOLOKIA_HTTP_PORT",
                "value": "8778"
              }
            ],
            "imagePullPolicy": "IfNotPresent",
            "name": "sprocket-java",
            "ports": [
              {
                "containerPort": 8080,
                "name": "http",
                "protocol": "TCP"
              },
              {
                "containerPort": 8081,
                "name": "management",
                "protocol": "TCP"
              },
              {
                "containerPort": 8778,
                "name": "jolokia",
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "initialDelaySeconds": 10,
              "tcpSocket": {
                "port": 8080
              },
              "timeoutSeconds": 1
            },
            "resources": {
              "limits": {
                "cpu": "2000m",
                "memory": "128Mi"
              },
              "requests": {
                "cpu": "100m",
                "memory": "128Mi"
              }
            },
            "securityContext": {
              "privileged": false
            },
            "terminationMessagePath": "/dev/termination-log",
            "volumeMounts": [
              {
                "mountPath": "/u01/logs",
                "name": "application-log-volume"
              },
              {
                "mountPath": "/u01/secrets/app/aurora-token",
                "name": "aurora-token"
              },
              {
                "mountPath": "/u01/foo",
                "name": "sprocket-config"
              }
            ]
          }
        ],
        "restartPolicy": "Always",
        "dnsPolicy": "ClusterFirst",
        "serviceAccountName": "aurora-fraggle"
      }
    }
  }
}