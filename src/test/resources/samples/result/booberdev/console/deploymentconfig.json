{
  "apiVersion": "apps.openshift.io/v1",
  "kind": "DeploymentConfig",
  "metadata": {
    "annotations": {
      "boober.skatteetaten.no/applicationFile": "booberdev/console.json",
      "console.skatteetaten.no/alarm": "true",
      "console.skatteetaten.no/management-path": ":8082/actuator"
    },
    "labels": {
      "app": "openshift-console-api",
      "updatedBy": "hero",
      "affiliation": "aos",
      "booberDeployId": "123",
      "name": "openshift-console-api",
      "deployTag": "3"
    },
    "name": "openshift-console-api"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "name": "openshift-console-api"
    },
    "strategy": {
      "rollingParams": {
        "intervalSeconds": 1,
        "maxSurge": "25%",
        "maxUnavailable": 0,
        "timeoutSeconds": 180,
        "updatePeriodSeconds": 1
      },
      "type": "Rolling"
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "openshift-console-api",
          "updatedBy": "hero",
          "affiliation": "aos",
          "booberDeployId": "123",
          "name": "openshift-console-api",
          "deployTag": "3"
        }
      },
      "spec": {
        "containers": [
          {
            "env": [
              {
                "name": "POD_NAME",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.name"
                  }
                }
              },
              {
                "name": "POD_NAMESPACE",
                "valueFrom": {
                  "fieldRef": {
                    "apiVersion": "v1",
                    "fieldPath": "metadata.namespace"
                  }
                }
              },
              {
                "name": "OPENSHIFT_CLUSTER",
                "value": "utv"
              },
              {
                "name": "APP_NAME",
                "value": "openshift-console-api"
              },
              {
                "name": "SPLUNK_INDEX",
                "value": "openshift-test"
              },
              {
                "name": "ROUTE_NAME",
                "value": "openshift-console-api-aos-booberdev.utv.paas.skead.no"
              },
              {
                "name": "ROUTE_URL",
                "value": "http://openshift-console-api-aos-booberdev.utv.paas.skead.no"
              },
              {
                "name": "ENABLE_REMOTE_DEBUG",
                "value": "true"
              },
              {
                "name": "DEBUG_PORT",
                "value": "5005"
              },
              {
                "name": "OPENSHIFT_CONSOLE_API_DB",
                "value": "/u01/secrets/app/openshift-console-api-db/info"
              },
              {
                "name": "OPENSHIFT_CONSOLE_API_DB_PROPERTIES",
                "value": "/u01/secrets/app/openshift-console-api-db/db.properties"
              },
              {
                "name": "DB",
                "value": "/u01/secrets/app/openshift-console-api-db/info"
              },
              {
                "name": "DB_PROPERTIES",
                "value": "/u01/secrets/app/openshift-console-api-db/db.properties"
              },
              {
                "name": "HTTP_PORT",
                "value": "8080"
              },
              {
                "name": "MANAGEMENT_HTTP_PORT",
                "value": "8081"
              },
              {
                "name": "JOLOKIA_HTTP_PORT",
                "value": "8778"
              }
            ],
            "imagePullPolicy": "IfNotPresent",
            "name": "openshift-console-api-java",
            "ports": [
              {
                "containerPort": 8080,
                "name": "http",
                "protocol": "TCP"
              },
              {
                "containerPort": 8081,
                "name": "management",
                "protocol": "TCP"
              },
              {
                "containerPort": 8778,
                "name": "jolokia",
                "protocol": "TCP"
              }
            ],
            "readinessProbe": {
              "initialDelaySeconds": 10,
              "tcpSocket": {
                "port": 8080
              },
              "timeoutSeconds": 1
            },
            "resources": {
              "limits": {
                "cpu": "2000m",
                "memory": "128Mi"
              },
              "requests": {
                "cpu": "100m",
                "memory": "128Mi"
              }
            },
            "securityContext": {
              "privileged": false
            },
            "terminationMessagePath": "/dev/termination-log",
            "volumeMounts": [
              {
                "mountPath": "/u01/logs",
                "name": "application-log-volume"
              }
            ]
          }
        ],
        "dnsPolicy": "ClusterFirst",
        "restartPolicy": "Always",
        "volumes": [
          {
            "emptyDir": {
            },
            "name": "application-log-volume"
          }
        ]
      }
    },
    "triggers": [
      {
        "imageChangeParams": {
          "automatic": true,
          "containerNames": [
            "openshift-console-api-java"
          ],
          "from": {
            "kind": "ImageStreamTag",
            "name": "openshift-console-api:default"
          }
        },
        "type": "ImageChange"
      }
    ]
  }
}
