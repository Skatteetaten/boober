{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "aurora-atomhopper",
    "annotations": {
      "description": "Deploy en atomhopper",
      "iconClass": "icon-jee",
      "tags": "instant-app, atom"
    }
  },
  "objects": [
    {
      "apiVersion": "v1",
      "kind": "ImageStream",
      "metadata": {
        "name": "tvinn"
      },
      "spec": {
        "dockerImageRepository": "docker-registry.aurora.sits.no:5000/aurora/atomhopper",
        "tags": [
          {
            "from": {
              "kind": "DockerImage",
              "name": "docker-registry.aurora.sits.no:5000/aurora/atomhopper:1"
            },
            "importPolicy": {
              "scheduled": true
            },
            "name": "default"
          }
        ]
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "annotations": {
          "prometheus.io/path": "/metrics",
          "prometheus.io/scheme": "http",
          "prometheus.io/scrape": "false"
        },
        "name": "tvinn"
      },
      "spec": {
        "portalIP": "",
        "ports": [
          {
            "name": "http",
            "nodePort": 0,
            "port": 80,
            "protocol": "TCP",
            "targetPort": 8080
          }
        ],
        "selector": {
          "name": "tvinn"
        },
        "sessionAffinity": "None",
        "type": "ClusterIP"
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Route",
      "metadata": {
        "name": "tvinn"
      },
      "spec": {
        "to": {
          "kind": "Service",
          "name": "tvinn"
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "DeploymentConfig",
      "metadata": {
        "labels": {
          "name": "tvinn"
        },
        "name": "tvinn"
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "name": "tvinn"
        },
        "strategy": {
          "resources": {},
          "rollingParams": {
            "intervalSeconds": 1,
            "maxSurge": "25%",
            "maxUnavailable": 0,
            "timeoutSeconds": 120,
            "updatePeriodSeconds": 1
          },
          "type": "Rolling"
        },
        "template": {
          "metadata": {
            "labels": {
              "name": "tvinn"
            }
          },
          "spec": {
            "containers": [
              {
                "capabilities": {},
                "env": [
                  {
                    "name": "SPLUNK_INDEX",
                    "value": "safir_test"
                  },
                  {
                    "name": "POD_NAME",
                    "valueFrom": {
                      "fieldRef": {
                        "apiVersion": "v1",
                        "fieldPath": "metadata.name"
                      }
                    }
                  },
                  {
                    "name": "POD_NAMESPACE",
                    "valueFrom": {
                      "fieldRef": {
                        "apiVersion": "v1",
                        "fieldPath": "metadata.namespace"
                      }
                    }
                  },
                  {
                    "name": "JAVA_OPTS",
                    "value": "-Xmx4g -Xms2g"
                  },
                  {
                    "name": "splunk_config_stanzas",
                    "value": "# --- start/stanza STDOUT\n[monitor://./logs/*.log]\ndisabled = false\nfollowTail = 0\nsourcetype = log4j\nindex = INDEX-PLACEHOLDER\n_meta = environment::NAMESPACE-PLACEHOLDER application::tvinn nodetype::openshift\nhost = openshift-host\n# --- end/stanza\n\n# --- start/stanza ACCESS_LOG\n[monitor://./logs/*.access]\ndisabled = false\nfollowTail = 0\nsourcetype = access_combined\nindex = INDEX-PLACEHOLDER\n_meta = environment::NAMESPACE-PLACEHOLDER application::tvinn nodetype::openshift\nhost = openshift-host\n# --- end/stanza\n\n# --- start/stanza GC LOG\n[monitor://./logs/*.gc]\ndisabled = false\nfollowTail = 0\nsourcetype = gc_log\nindex = INDEX-PLACEHOLDER\n_meta = environment::NAMESPACE-PLACEHOLDER application::tvinn nodetype::openshift\nhost = openshift-host\n# --- end/stanza\n\n"
                  },
                  {
                    "name": "FEED_NAME",
                    "value": "${FEED_NAME}"
                  },
                  {
                    "name": "DB_NAME",
                    "value": "tvinn"
                  },
                  {
                    "name": "HOST_NAME",
                    "value": "localhost"
                  },
                  {
                    "name": "SCHEME",
                    "value": "http"
                  }
                ],
                "image": "tvinn",
                "imagePullPolicy": "IfNotPresent",
                "name": "tvinn",
                "ports": [
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 8778,
                    "name": "jolokia"
                  }
                ],
                "resources": {
                  "limits": {
                    "cpu": "2",
                    "memory": "${MAX_MEMORY}"
                  },
                  "requests": {
                    "cpu": "0.1",
                    "memory": "128Mi"
                  }
                },
                "securityContext": {
                  "capabilities": {},
                  "privileged": false
                },
                "terminationMessagePath": "/dev/termination-log",
                "volumeMounts": [
                  {
                    "mountPath": "/u01/logs",
                    "name": "application-log-volume"
                  }
                ]
              }
            ],
            "dnsPolicy": "ClusterFirst",
            "restartPolicy": "Always",
            "serviceAccount": "",
            "serviceAccountName": "",
            "volumes": [
              {
                "emptyDir": {},
                "name": "application-log-volume"
              }
            ]
          }
        },
        "triggers": [
          {
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "tvinn"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "name": "tvinn:default"
              },
              "lastTriggeredImage": ""
            },
            "type": "ImageChange"
          }
        ]
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "description": "Unique name for this app. Route will be NAME.cluster_prefix_url"
    },
    {
      "name": "FEED_NAME",
      "description": "Atomhopper feed name",
      "required": true
    },
    {
      "name": "DB_NAME",
      "description": "Name of the database",
      "required": true
    },
    {
      "name": "MAX_MEMORY",
      "description": "Maks grense for minne til pod. Bruk betegnelse Gi.",
      "value": "4Gi"
    },
    {
      "name": "DOMAIN_NAME",
      "description": "Domain name to appear in the links in the feed",
      "required": true
    },
    {
      "name": "SCHEME",
      "description": "Scheme used in links in the feed. http/https",
      "value": "http"
    },
    {
      "name": "SPLUNK_INDEX",
      "description": "Hvilken index i splunk skal brukes? Sett til tom for å ikke logge til splunk. Dette er standard."
    },
    {
      "name": "AFFILIATION",
      "description": "Hvilken tilhørighet atomhopperen har"
    },
    {
      "name": "VERSION",
      "description": "Hvilken versjon av AtomHopper vil du kjøre",
      "value": "1.3.4"
    }
  ]
}
