#/bin/sh

token=$(oc whoami -t)
if [ "$#" -eq 1 ]; then
  http --timeout 300 GET :8080/affiliation/$1 Authorization:"bearer $token"
elif [ "$#" -eq 2 ]; then
  http --timeout 300 $1 :8080/affiliation/$1 Authorization:"bearer $token"
else
  http --timeout 300 $2 :8080/affiliation/$2 Authorization:"bearer $token"  < $3
fi

