{
  "affiliation": "paas",
  "setupParams": {
    "apps": [
      "tvinn"
    ],
    "envs": [
      "boober"
    ]
  },
  "auroraConfig": {
    "files": {
      "template/atomhopper.json": {
        "kind": "Template",
        "apiVersion": "v1",
        "metadata": {
          "name": "atomhopper",
          "creationTimestamp": null,
          "labels": {
            "aurora-objects-version": "3.1.6"
          },
          "annotations": {
            "description": "Deploy en atomhopper. Må sette database secret manuelt",
            "iconClass": "icon-jee",
            "tags": "instant-app, atom"
          }
        },
        "objects": [
          {
            "apiVersion": "v1",
            "kind": "ImageStream",
            "metadata": {
              "name": "atomhopper",
              "labels": {
                "affiliation": "${AFFILIATION}"
              }
            },
            "spec": {
              "dockerImageRepository": "docker-registry.aurora.sits.no:5000/aurora/atomhopper",
              "tags": [
                {
                  "from": {
                    "kind": "DockerImage",
                    "name": "docker-registry.aurora.sits.no:5000/aurora/atomhopper:1.3.0"
                  },
                  "importPolicy": {
                    "scheduled": true
                  },
                  "name": "1.3.0"
                }
              ]
            },
            "status": {
              "dockerImageRepository": ""
            }
          },
          {
            "apiVersion": "v1",
            "kind": "Service",
            "metadata": {
              "annotations": {
                "prometheus.io/path": "/metrics",
                "prometheus.io/scheme": "http",
                "prometheus.io/scrape": "false"
              },
              "labels": {
                "affiliation": "${AFFILIATION}"
              },
              "name": "${APP_NAME}"
            },
            "spec": {
              "portalIP": "",
              "ports": [
                {
                  "name": "http",
                  "nodePort": 0,
                  "port": 80,
                  "protocol": "TCP",
                  "targetPort": 8080
                }
              ],
              "selector": {
                "name": "${APP_NAME}"
              },
              "sessionAffinity": "None",
              "type": "ClusterIP"
            },
            "status": {
              "loadBalancer": {}
            }
          },
          {
            "apiVersion": "v1",
            "kind": "Route",
            "metadata": {
              "name": "${APP_NAME}",
              "labels": {
                "affiliation": "${AFFILIATION}"
              }
            },
            "spec": {
              "to": {
                "kind": "Service",
                "name": "${APP_NAME}"
              }
            },
            "status": {}
          },
          {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
              "annotations": {
                "sprocket.sits.no/deployment-config.database": "${DATABASE}"
              },
              "labels": {
                "name": "${APP_NAME}",
                "affiliation": "${AFFILIATION}"
              },
              "name": "${APP_NAME}"
            },
            "spec": {
              "replicas": 1,
              "selector": {
                "name": "${APP_NAME}"
              },
              "strategy": {
                "resources": {},
                "rollingParams": {
                  "intervalSeconds": 1,
                  "maxSurge": "25%",
                  "maxUnavailable": 0,
                  "timeoutSeconds": 120,
                  "updatePeriodSeconds": 1
                },
                "type": "Rolling"
              },
              "template": {
                "metadata": {
                  "labels": {
                    "name": "${APP_NAME}"
                  }
                },
                "spec": {
                  "containers": [
                    {
                      "capabilities": {},
                      "env": [
                        {
                          "name": "SPLUNK_INDEX",
                          "value": "${SPLUNK_INDEX}"
                        },
                        {
                          "name": "POD_NAME",
                          "valueFrom": {
                            "fieldRef": {
                              "apiVersion": "v1",
                              "fieldPath": "metadata.name"
                            }
                          }
                        },
                        {
                          "name": "POD_NAMESPACE",
                          "valueFrom": {
                            "fieldRef": {
                              "apiVersion": "v1",
                              "fieldPath": "metadata.namespace"
                            }
                          }
                        },
                        {
                          "name": "JAVA_OPTS",
                          "value": "-Xmx4g -Xms2g"
                        },
                        {
                          "name": "splunk_config_stanzas",
                          "value": "# --- start/stanza STDOUT\n[monitor://./logs/*.log]\ndisabled = false\nfollowTail = 0\nsourcetype = log4j\nindex = INDEX-PLACEHOLDER\n_meta = environment::NAMESPACE-PLACEHOLDER application::${APP_NAME} nodetype::openshift\nhost = openshift-host\n# --- end/stanza\n\n# --- start/stanza ACCESS_LOG\n[monitor://./logs/*.access]\ndisabled = false\nfollowTail = 0\nsourcetype = access_combined\nindex = INDEX-PLACEHOLDER\n_meta = environment::NAMESPACE-PLACEHOLDER application::${APP_NAME} nodetype::openshift\nhost = openshift-host\n# --- end/stanza\n\n# --- start/stanza GC LOG\n[monitor://./logs/*.gc]\ndisabled = false\nfollowTail = 0\nsourcetype = gc_log\nindex = INDEX-PLACEHOLDER\n_meta = environment::NAMESPACE-PLACEHOLDER application::${APP_NAME} nodetype::openshift\nhost = openshift-host\n# --- end/stanza\n\n"
                        },
                        {
                          "name": "FEED_NAME",
                          "value": "${FEED_NAME}"
                        },
                        {
                          "name": "DB_NAME",
                          "value": "${DB_NAME}"
                        },
                        {
                          "name": "HOST_NAME",
                          "value": "${DOMAIN_NAME}"
                        },
                        {
                          "name": "SCHEME",
                          "value": "${SCHEME}"
                        }
                      ],
                      "image": "${APP_NAME}",
                      "imagePullPolicy": "IfNotPresent",
                      "name": "${APP_NAME}",
                      "ports": [
                        {
                          "containerPort": 8080,
                          "protocol": "TCP"
                        },
                        {
                          "containerPort": 8778,
                          "name": "jolokia"
                        }
                      ],
                      "resources": {
                        "limits": {
                          "cpu": "2",
                          "memory": "${MAX_MEMORY}"
                        },
                        "requests": {
                          "cpu": "0.1",
                          "memory": "128Mi"
                        }
                      },
                      "securityContext": {
                        "capabilities": {},
                        "privileged": false
                      },
                      "terminationMessagePath": "/dev/termination-log",
                      "volumeMounts": [
                        {
                          "mountPath": "/u01/logs",
                          "name": "application-log-volume"
                        }
                      ]
                    }
                  ],
                  "dnsPolicy": "ClusterFirst",
                  "restartPolicy": "Always",
                  "serviceAccount": "",
                  "serviceAccountName": "",
                  "volumes": [
                    {
                      "emptyDir": {},
                      "name": "application-log-volume"
                    }
                  ]
                }
              },
              "triggers": [
                {
                  "imageChangeParams": {
                    "automatic": true,
                    "containerNames": [
                      "${APP_NAME}"
                    ],
                    "from": {
                      "kind": "ImageStreamTag",
                      "name": "atomhopper:1.2.0"
                    },
                    "lastTriggeredImage": ""
                  },
                  "type": "ImageChange"
                }
              ]
            },
            "status": {}
          }
        ],
        "parameters": [
          {
            "name": "APP_NAME",
            "description": "Unique name for this app. Route will be APP_NAME.cluster_prefix_url",
            "generate": "expression",
            "from": "[a-z]{6}"
          },
          {
            "name": "FEED_NAME",
            "description": "Atomhopper feed name"
          },
          {
            "name": "DATABASE",
            "description": "Spesifiser databaser fra dbHotel. Komma separert liste med: \u003cnavn\u003e:\u003cid\u003e for en db fra id. \u003cnavn\u003e:temp for en temp database. auto for å hente alle databaser for denne applikasjonen i dette miljøet. Standard er blank som gir ingen."
          },
          {
            "name": "DB_NAME",
            "description": "Name of the database"
          },
          {
            "name": "MAX_MEMORY",
            "description": "Maks grense for minne til pod. Bruk betegnelse Gi.",
            "value": "4Gi"
          },
          {
            "name": "DOMAIN_NAME",
            "description": "Domain name to appear in the links in the feed"
          },
          {
            "name": "SCHEME",
            "description": "Scheme used in links in the feed. http/https",
            "value": "http"
          },
          {
            "name": "SPLUNK_INDEX",
            "description": "Hvilken index i splunk skal brukes? Sett til tom for å ikke logge til splunk. Dette er standard."
          },
          {
            "name": "AFFILIATION",
            "description": "Hvilken tilhørighet atomhopperen har"
          }
        ],
        "labels": {
          "aurora-objects-version": "3.1.6",
          "template": "aurora-atomhopper-application"
        }
      },
      "tvinn.json": {
        "name": "tvinn",
        "flags": [
          "route"
        ],
        "type": "process",
        "templateFile": "template/atomhopper.json",
        "parameters": {
          "SPLUNK_INDEX": "openshift-test",
          "APP_NAME": "tvinn",
          "FEED_NAME": "tolldeklarasjon",
          "DOMAIN_NAME": "localhost",
          "SCHEME": "http",
          "DB_NAME": "tvinn",
          "AFFILIATION": "safir"
        }
      },
      "about.json": {
        "groups": "APP_PaaS_drift APP_PaaS_utv",
        "affiliation": "paas"
      },
      "boober/about.json": {
        "cluster": "utv"
      },
      "boober/tvinn.json": {}
    }
  }
}
